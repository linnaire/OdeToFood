@page "{id:int}"
@model OdeToFood.Pages.Restaurants.DetailModel
@{
    ViewData["Title"] = "Detail";
}

<h2>@Model.Restaurant.Name</h2>

@if (Model.Message != null)
{
    <div class="alert alert-info">
        @Model.Message.Trim()
    </div>
}

<div class="form-group">
    <label asp-for="Restaurant.Location"></label>
    <input asp-for="Restaurant.Location" class="form-control disabled" disabled />
</div>

<div class="form-group">
    <label asp-for="Restaurant.Cuisine"></label>
    <input asp-for="Restaurant.Cuisine" class="form-control disabled" disabled />
</div>
<a asp-page="Index" class="btn btn-primary">All Restaurants</a>

